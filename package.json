{
  "name": "chronoshade",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "1.1.1",
  "publisher": "markusmorita",
  "engines": {
    "vscode": "^1.98.0"
  },
  "icon": "resources/media/logo.png",
  "categories": [
    "Themes",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mspitzbarth/chronoshade"
  },
  "license": "MIT",
  "keywords": [
    "theme",
    "dark mode",
    "light mode",
    "automatic",
    "sunset",
    "sunrise",
    "time-based",
    "scheduler",
    "appearance",
    "switcher"
  ],
  "author": {
    "name": "Markus Morita",
    "email": "spitzbarth.markus@gmail.com"
  },
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "chronoShade.switchTheme",
        "title": "%command.switchTheme%"
      },
      {
        "command": "chronoShade.previewTheme",
        "title": "%command.previewTheme%"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chronoShade",
          "title": "%viewContainer.title%",
          "icon": "./resources/media/icon.png"
        }
      ]
    },
    "views": {
      "chronoShade": [
        {
          "type": "webview",
          "id": "chronoShade.sidebar",
          "name": "%view.name%",
          "icon": "./resources/media/icon.png"
        }
      ]
    },
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "chronoShade.dayTheme": {
          "type": "string",
          "default": "Default Light+",
          "description": "%config.dayTheme%"
        },
        "chronoShade.nightTheme": {
          "type": "string",
          "default": "Default Dark+",
          "description": "%config.nightTheme%"
        },
        "chronoShade.manualSunset": {
          "type": "string",
          "default": "18:00",
          "description": "%config.manualSunset%"
        },
        "chronoShade.manualSunrise": {
          "type": "string",
          "default": "06:00",
          "description": "%config.manualSunrise%"
        },
        "chronoShade.overrideThemeSwitch": {
          "type": "boolean",
          "default": false,
          "description": "%config.overrideThemeSwitch%"
        },
        "chronoShade.dayTimeStart": {
          "type": "string",
          "default": "06:00",
          "description": "%config.dayTimeStart%"
        },
        "chronoShade.nightTimeStart": {
          "type": "string",
          "default": "18:00",
          "description": "%config.nightTimeStart%"
        },
        "chronoShade.useLocationBasedTimes": {
          "type": "boolean",
          "default": false,
          "description": "%config.useLocationBasedTimes%"
        },
        "chronoShade.latitude": {
          "type": "number",
          "default": 0,
          "description": "%config.latitude%",
          "minimum": -90,
          "maximum": 90
        },
        "chronoShade.longitude": {
          "type": "number",
          "default": 0,
          "description": "%config.longitude%",
          "minimum": -180,
          "maximum": 180
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "pnpm run l10n:extract && pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies",
    "l10n:extract": "npx @vscode/l10n-dev export --outDir ./l10n ./src",
    "dev:install": "pnpm run package && code --install-extension chronoshade-$(node -p \"require('./package.json').version\").vsix"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3"
  }
}
